{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../../dist/api",
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {},
    "incremental": true
  },
  "exclude": ["node_modules", "tmp"]
}
